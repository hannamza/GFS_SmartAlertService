<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:background="#e9e9e9e9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e9e9e9e9"
            android:gravity="left" >
            <ImageView
                android:id="@+id/ImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/top_left" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:background="#e9e9e9e9"
            android:gravity="center" >
            <ImageView
                android:id="@+id/ImageView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/top_title" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e9e9e9e9"
            android:gravity="right" >
            <ImageButton
                android:id="@+id/setupButton"
                android:background="#e9e9e9e9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/top_right"
                android:scaleType="fitCenter"
                android:gravity="right"                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/contents"
        android:layout_below="@id/title1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/menu_bg"
        android:padding="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.968"
            android:gravity="right" >
            <ToggleButton
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/top_fire"
                android:textOn=""
                android:textOff=""
                android:checked="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right" >
            <ToggleButton
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/top_gas"
                android:textOn=""
                android:textOff=""
                android:checked="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right" >
            <ToggleButton
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/top_spy"
                android:textOn=""
                android:textOff=""
                android:checked="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.977"
            android:gravity="right" >
            <ToggleButton
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/top_line"
                android:textOn=""
                android:textOff=""
                android:checked="true" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/total_info"
        android:layout_below="@id/contents"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:background="#FFFFFF"
        android:paddingBottom="18dp" >

        <TextView
            android:id="@+id/textView0_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" "
            android:layout_weight="6" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="100"
            android:background="@drawable/fire_cnt_bg_selector" />
        <TextView
            android:id="@+id/textView1_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" "
            android:layout_weight="6" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="0"
            android:background="@drawable/switch_track_on" />
        <TextView
            android:id="@+id/textView2_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="   "
            android:layout_weight="6" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="0"
            android:background="@drawable/switch_track_on" />
        <TextView
            android:id="@+id/textView3_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" "
            android:layout_weight="6" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="0"
            android:background="@drawable/switch_track_on" />
        <TextView
            android:id="@+id/textView4_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" "
            android:layout_weight="6" />


        <!--<TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#FF5722"
            android:gravity="center_vertical"
            android:text="     전체: 1건\n     (화재: 5건, 가스: 3건, 감시: 3건, 단선: 2건)" />
-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/im1"
        android:layout_below="@id/contents"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#F6F6F6F6"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/listView1"
                android:listSelector="#00000000"
                android:cacheColorHint="#00000000"
                android:divider="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transcriptMode="disabled"/>
        </FrameLayout>
    </LinearLayout>


</LinearLayout>